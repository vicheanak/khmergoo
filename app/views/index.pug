extends layouts/default

block content
	include layouts/header
	div(class="body-container")
		include layouts/aside
		section(class="content-section")
			ul(class="item-section")
				each item in results.items
					li(class="item-container")
						div(class="item-description-container")
							a(class="item-title", href=item.url) #{item.name}
							p(class="item-subtitle") #{item.Website.name} - #{item.postedDate}
							p(class="item-description") #{item.description}
						img(class="item-thumbnail", src=item.imageUrl)
	section(class="footer-section")
		div(class="load-more")
			- var url = "/" + results.slug + "/more/" + results.currentPage
			a(id="more-link", href=url) ពត៌មានបន្ថែម
	div(class="copyright-container")
		p We're Cambodians. We always forgive. We always forget. Love & Peace!
